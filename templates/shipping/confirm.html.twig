{% extends 'base.html.twig' %}

{% block title %}Valider votre prise en charge{% endblock %}


{% block body %}

    <div class="main mt-5">

        <div class="row mt-4">
            <div class="col-sm-12 col-md-12 col-lg-12">

                <div class="container mt-5 mb-5">
                    <h1 style="font-size:1.8em;" class="col-12 text-center text-secondary display-3 mt-5">Vérifier vos informations <strong>{{name}}</strong></h1>

                    <p class="lead col-12 text-center mt-5">Votre numéro de téléphone <strong>{{phone}}</strong></p>
                    <h5 class="mt-5 text-center">Addresse</h5>
                    <p class="lead text-center">{{address}}</p>
                    <h5 class="mt-5 text-center">Date et heure de livraison souhaitée</h5>
                    <p class="lead text-center">{{date}}</p>
                    <p class="lead text-center mt-1">Vous avez choisi de vous faire livrer à partir de {{time}}</p>                  
                </div>
                <div class="d-flex justify-content-center mb-5">
                    <a href="{{path('home')}}" class="btn btn-secondary mb-5 rounded-pill">Retour à l'accueil</a>
                </div>
            </div>
        </div>
    
    </div>

  
{% endblock %}
